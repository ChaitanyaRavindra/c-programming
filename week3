#include <stdio.h>
#include <stdlib.h>
#define size 5
int a[size];
int front=-1;
int rear=-1;

int IsFull()
{

 if (rear==(size-1))
 {

     return 1;
 }else return 0;
}

int IsEmpty()
{

 if (rear==-1 && front==-1)
 {

     return 1;
 }else {return 0;}
}
int Enqueue()
{int x;
    if(IsFull())
    {
        printf("Queue is full\n");
        return;
    }
    else if (IsEmpty())
    {

        front=0;
        rear=0;
        printf("Enter the value to be inserted:\n");
        scanf("%d",&x);
    }
    else
    {
        rear=rear+1;
        printf("Enter the value to be inserted:\n");
        scanf("%d",&x);
    }
    a[rear]=x;

}
void dequeue()
 {
     if(IsEmpty())
     {
         printf("Queue is empty\n");
     }
     else if(rear==front)
     {
         front=-1;
         rear=-1;
     }
     else
     {
        front=front+1;
        printf("\n-->%d -->element has been dequeued",a[front]);

     }
 }
 void display()
 {
     int i;
     if (IsEmpty())
     {
         printf("Queue is empty\n");

     }
     else
     {
         for(i=front;i<=rear;i++)
         {
             printf("-->%d\n",a[i]);
         }
     }
 }
 int main()
 {

    int choice;
    while(1)
    {
      printf("Enter your choice:\n1.Insert\n2.Delete\n3.Display\n4.Exit:\n");
      scanf("%d",&choice);
      switch(choice)
      {
          case 1:Enqueue();
                break;
          case 2:dequeue();
                break;
           case 3:display();
              break;
              case 4:exit(0);

              default:printf("Invalid Inptut");
      }

      }
    return 0;
 }
